            {
                <li class="page-item"><a class="page-link paginador" asp-controller="Evento" asp-action="Listar" asp-route-filtro="" asp-route-pagina="@i" 
              data-ajax="true"
              data-ajax-method="GET"
              data-ajax-mode="replace"
              data-ajax-update="#gridTabla">@i</a></li>
